{
  "name": "tombheads-ui",
  "version": "0.0.0",
  "author": "Naomi Hauret",
  "description": "Tombheads Escrow but with a slightly better UI",
  "scripts": {
    "setup": "npm install && npm run prepare",
    "prepare": "husky install",
    "start": "npm run dapp:start",
    "dapp:start": "vite",
    "dapp:dev": "vite",
    "dapp:build": "vite build",
    "dapp:serve": "vite preview",
    "commit": "git-cz",
    "css:prettify": "prettier --write \"./**/*.css\"",
    "js:prettify": "prettier --write \"./**/*.{js,ts,jsx,tsx}\"",
    "json:prettify": "prettier --write \"./**/*.json\"",
    "format": "npm run js:prettify && npm run css:prettify && npm run json:prettify"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "date-fns": "^2.24.0",
    "dotenv": "^10.0.0",
    "html-minifier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "polished": "^4.1.3",
    "postcss-custom-media": "^8.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.4.1",
    "tailwindcss": "^2.2.15",
    "tailwindcss-logical": "^2.0.0",
    "vite": "^2.5.10",
    "vite-plugin-solid": "^2.0.3"
  },
  "dependencies": {
    "@felte/solid": "^0.2.3",
    "@felte/validator-zod": "^0.3.3",
    "ethers": "^5.4.7",
    "solid-headless": "^0.7.0",
    "solid-js": "^1.1.5",
    "zod": "^3.9.4"
  },
  "lint-staged": {
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "prettier --parser=babel --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-add": "lint-staged",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
